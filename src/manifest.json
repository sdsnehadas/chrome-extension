{
  "manifest_version": 2,
  "name": "Life Extension",
  "short_name": "Make the most of a new tab",
  "description": "This extension helps you everywhere.",
  "version": "1.0.0",
  "author": "Sneha Das Sreejith @sdsnehadas",

  "icons": {
    "19": "assets/Icon-19.png",
    "38": "assets/Icon-38.png",
    "48": "assets/Icon-48.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/google_icon.png",
      "38": "assets/google_icon.png"
    },
    "default_title": "Open a new tab to view Life."
  },

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "background": {
    "page": "index.html",
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": ["activeTab"]
}
